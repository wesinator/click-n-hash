{
  "manifest_version": 3,
  "name": "Click'n'Hash",
  "short_name": "click-n-hash",
  "description": "Adds a context menu to take hashes of selected text and pages in the browser",
  "version": "0.3.0",
  "default_locale": "en",
  "minimum_chrome_version": "88",
  "permissions": [
    "contextMenus",
    "scripting",
    "activeTab"
  ],
  "icons": {
    "64": "assets/clicknhash-64x64.png"
  },
  "background": {"service_worker": "background.js"}
}
